<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="headerTitle"
            type="String" />

        <variable
            name="backPressNotVisible"
            type="Boolean" />

        <variable
            name="closeOptionVisible"
            type="Boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragmentBackIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/ic_back_navigation"
            bind:isVisible="@{!backPressNotVisible}" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:fontFamily="@font/satoshi_bold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:text="@{headerTitle,default = `Header Title`}"
            android:textColor="@color/_020617"
            android:textSize="20sp"
            tools:gravity="center_vertical" />

        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="7dp"
            android:src="@drawable/x_close"
            bind:isVisible="@{closeOptionVisible}" />
    </LinearLayout>
</layout>